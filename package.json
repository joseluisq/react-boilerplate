{
  "name": "react-minimal-boilerplate",
  "private": true,
  "description": "Another minimal React boilerplate",
  "repository": "joseluisq/webpack-boilerplate",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "engines": {
    "node": ">= 4.2"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "peerDependencies": {
    "eslint": "2.x - 3.x"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-react-css-modules": "^2.8.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": ">=2.1.2",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "4.5.3",
    "postcss-loader": "^2.0.6",
    "react-hot-loader": "next",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.4.5",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dashboard -t 'react-minimal-boilerplate' -- webpack-dev-server --config webpack.config.dev.js",
    "build": "npm run clean && npm run prod",
    "clean": "rm -rf ./dist",
    "prod": "webpack -p --config webpack.config.prod.js",
    "test": "npm run lint && npm run tape",
    "lint": "eslint src"
  },
  "babel": {
    "presets": [
      ["es2015", { "modules": false }],
      "stage-0",
      "react"
    ],
    "plugins": [
      "react-css-modules",
      "dev-expression"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-jsx"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
